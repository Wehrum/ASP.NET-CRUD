@using Microsoft.AspNetCore.Identity
@model IEnumerable<WebAppProject.Models.Joke>
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Jokes";
}

<h1>Welcome to Jokes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
