@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2 class="text-danger">Administration Panel</h2>

<h4>Roles list</h4>
<hr />

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="Create"
       asp-controller="Admin">Add new role</a>
    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card header">
                Role Id : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-action="EditRole"
                   asp-controller="Admin" asp-route-id="@role.Id">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>

    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            d
            <h5 class="card-tite">
                Use the button below to create a role
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="admin" asp-action="Create">
                Create Role
            </a>
        </div>
    </div>
}